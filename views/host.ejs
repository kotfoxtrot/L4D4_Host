<html>
  <head>
    <style type="text/css">
      html,
      body {
        background: black;
        margin: 0px;
        padding: 0px;
        border-style: none;
      }
      .img {
        width: 100%;
        height: 100%;
      }
    </style>
  </head>

  <body scroll="no">
    <% const serverImages = {
      1: 'Perks.png',
      2: 'Coop.png',
      3: 'Classic.png',
      4: 'T1Hard.png'
    }; %>

    <% if (serverImages[server]) { %>
      <img src="/<%= season %>/<%= serverImages[server] %>" class="img" border="0" />
    <% } else { %>
      <img src="/<%= season %>/else.png" class="img" border="0" />
    <% } %>
  </body>
</html>
